// src/models/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Artist {
  id        Int       @id @default(autoincrement())
  name      String
  country   String?
  albums    Album[]
}

model Album {
  id          Int       @id @default(autoincrement())
  title       String
  releaseYear Int?
  artist      Artist    @relation(fields: [artistId], references: [id])
  artistId    Int
  songs       Song[]
}

model Song {
  id        Int     @id @default(autoincrement())
  title     String
  duration  Int?
  album     Album   @relation(fields: [albumId], references: [id])
  albumId   Int
}
